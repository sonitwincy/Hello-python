from tkinter import *


def handler1():
  print("White")


def handler2():
  print("Orange")


def handler3():
  print("Red")


# Create the main window
root = Tk(className="Event")

# Create buttons and pack them. The "fill" should be lowercase 'f' in all pack calls.
b1 = Button(root, text="white", bg="white", fg="black", command=handler1)
b1.pack(fill=X, padx=15)

b2 = Button(root, text="orange", bg="orange", fg="brown", command=handler2)
b2.pack(fill=X, pady=15, padx=15)

b3 = Button(root, text="Red", bg="red", fg="black", command=handler3)
b3.pack(fill=X, padx=15)

# Start the Tkinter event loop
mainloop()
