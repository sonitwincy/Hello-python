import tkinter as tk  # Import the tkinter library and alias it as 'tk'

t = tk.Tk()  # Create a tkinter main window and store it in 't'

# Add a Label widget
label = tk.Label(t, text="Hello, Tkinter!")  # Create a Label widget with the text "Hello, Tkinter!" and associate it with the main window 't'
label.pack()  # Use the pack geometry manager to place the label in the main window

t.mainloop()  # Start the tkinter event loop to display the main window and handle user interactions
