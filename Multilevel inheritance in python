# Define a base class called 'Base'
class Base:
    # Constructor method for the Base class
    def __init__(self):
        # Initialize an instance variable 'name' with the value "Sophie Turner"
        self.name = "Sophie Turner"

    # Method to display the 'name' instance variable
    def display(self):
        print(self.name)

# Define a class 'Derived1' that inherits from the 'Base' class
class Derived1(Base):
    # Method specific to Derived1
    def disp(self):
        print("Derived1 method")

# Define another class 'Derived2' that inherits from 'Derived1'
class Derived2(Derived1):
    # Method specific to Derived2
    def showmessage(self):
        print("Derived2 method")

# Create an instance of Derived2
o1 = Derived2()

# Call the 'display' method from the Base class to print 'name'
o1.display()

# Call the 'disp' method from Derived1
o1.disp()

# Call the 'showmessage' method from Derived2
o1.showmessage()
